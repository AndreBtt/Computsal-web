<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Computsal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/animate.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/home/schedule.css" />
  </head>
  <body>
    <nav id="topNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/"> Computsal</a>
            </div>
            <div class="navbar-collapse collapse" id="bs-navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" data-toggle="modal" href="#login">configurações</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <section id="two">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="margin-top-0 text-primary">Agendar Horario</h2>
                    <hr class="primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h4 class="margin-top-5">Marque os horários que deseja jogar</h4>
                </div>
            </div>
        </div>

        <div class="container">
            <form name="schedule" method="POST" action="/agendarHorario" class="contact-form row col-md-8 col-md-offset-2">
                <% for(let i = 0; i < schedule.length; i++) { %>
                    <!-- <div class="group text-center">
                        <input id="<%= schedule[i].time_id %>" type="checkbox" <% if(schedule[i].availability) { %> checked <% } %>/> <%= schedule[i].time.substring(0, schedule[i].time.length - 3) %>
                    </div> -->
                    <div class="group page__toggle text-center">
                            <label class="toggle">
                                <input id="<%= schedule[i].time_id %>" class="toggle__input" type="checkbox" <% if(schedule[i].availability) { %> checked <% } %>>
                                <span class="toggle__label">
                                <span class="toggle__text"><%= schedule[i].time.substring(0, schedule[i].time.length - 3) %></span>
                                </span>
                            </label>
                        </div>
                <% } %>
                
                <input type="hidden" name="scheduleDiff" id="scheduleDiff">
                <input type="hidden" name="teamName" value="<%= teamName %>">

                <div id="send" class="col-md-12 text-center">
                    <button class="btn btn-primary btn-block btn-lg">Atualizar horários</button>
                </div>
            </form>
        </div>
    </section>


    <div id="login" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <a href="/criarTime"><h2 class="text-center">Criar meu time</h2></a>
                <a href="/agendarHorario"><h2 class="text-center">Agendar horario</h2></a>
                <% if(admin) { %>
                    <a href="/admin"><h2 class="text-center">Configurar campenato</h2></a>
                <% } %>
            </div>
        </div>
        </div>
    </div>
    <!--scripts loaded here -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.easing.min.js"></script>
    <script src="/js/home/wow.js"></script>
    <script src="/js/home/index.js"></script>
    <script src="/js/home/schedule.js"></script>
    
  </body>
</html>  
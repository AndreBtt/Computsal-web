<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Computsal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/animate.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/admin/teams.css" />
  </head>
  <body>
    <nav id="topNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/"> Computsal</a>
            </div>
            <div class="navbar-collapse collapse" id="bs-navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" data-toggle="modal" href="#login">
                            configurações
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <section id="two">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="margin-top-0 text-primary">Times</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">

            <% let seconds = 0 %>

            <% for (var i = 0; i < teams.length; i++) { %>
                <% if(seconds < 5) seconds++ %>
                <% let delay = "." + seconds + "s" %>
                <div id="<%= teams[i].name %>" class="ranking wow fadeIn" <%if(i%2 === 1) { %> style = "background-color: #222" <% } %> data-wow-delay="<%=delay%>">
                    <div class="jogador">
                        <div class="col-lg-10 col-md-10 col-xs-10">
                            <span class="time"><%= teams[i].name %></span>
                        </div>
                        <div  class="col-lg-2 col-md-2 col-xs-2 text-right">
                           <img onclick="deleteTeam('<%= teams[i].name %>')" src="/img/icons/delete.png" class="deleteButton" />
                        </div> 
                    </div>
                </div>
            <% } %>

            <div class="row text-center">
                <button id="send" onclick="save()" class=" btn btn-primary btn-lg" style="width:50%">Salvar alterações</button>
            </div>
        </div>
        
    </section>
    
    <div id="login" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <a href="/criarTime"><h2 class="text-center">Criar meu time</h2></a>
                <a href="/agendarHorario"><h2 class="text-center">Agendar horario</h2></a>
                <a href="/admin"><h2 class="text-center">Configurar campenato</h2></a>
            </div>
        </div>
        </div>
    </div>
    
    <!--scripts loaded here -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.easing.min.js"></script>
    <script src="/js/home/wow.js"></script>
    <script src="/js/home/index.js"></script>
    <script src="/js/admin/teams.js"></script>
  </body>
</html>  